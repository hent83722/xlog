@PACKAGE_INIT@

# Get installation prefix (parent of lib/cmake/xlog)
get_filename_component(XLOG_INSTALL_PREFIX "${CMAKE_CURRENT_LIST_DIR}/../../.." ABSOLUTE)

# Version info
set(xlog_VERSION "@PROJECT_VERSION@")
set(xlog_VERSION_MAJOR "@PROJECT_VERSION_MAJOR@")
set(xlog_VERSION_MINOR "@PROJECT_VERSION_MINOR@")
set(xlog_VERSION_PATCH "@PROJECT_VERSION_PATCH@")

add_library(xlog STATIC IMPORTED)
set_target_properties(xlog PROPERTIES
    IMPORTED_LOCATION "${XLOG_INSTALL_PREFIX}/lib/libxlog.a"
    INTERFACE_INCLUDE_DIRECTORIES "${XLOG_INSTALL_PREFIX}/include"
)
